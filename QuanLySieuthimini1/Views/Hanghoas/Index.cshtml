@model QuanLySieuthimini1.Models.Hanghoa

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ma_HH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nhacungcap.Ten_NCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nhomhang.Ten_NH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ten_HH)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.HangHoa)
    {
        <tr>
            <th>
                @item.Ma_HH
            </th>
            <th>
                @item.Nhacungcap.Ten_NCC
            </th>
            <td>
                @item.Nhomhang.Ten_NH
            </td>
            <td>
                @item.Ten_HH
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Ma_HH }) |
                @Html.ActionLink("Details", "Details", new { id = item.Ma_HH }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Ma_HH })
            </td>
        </tr>
    }

</table>
