@model IEnumerable<QuanLySieuthimini1.Models.Hanghoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            <h2>Danh sách hàng hoá</h2>
        </th>
        <th>
            @Html.ActionLink("Thêm Mới", "Create")
