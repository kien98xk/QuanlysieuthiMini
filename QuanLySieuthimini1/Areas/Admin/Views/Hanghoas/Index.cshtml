        @Html.DisplayFor(modelItem => item.Ma_HH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nhacungcap.Ten_NCC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nhomhang.Ten_NH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ten_HH)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.Ma_HH }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.Ma_HH }) |
