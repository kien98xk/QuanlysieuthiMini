@model IEnumerable<QuanLySieuthimini1.Models.Chitiethanghoa>

@{
    ViewBag.Title = "Chi tiết hàng hoá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            <h2>Danh sách chi tiết hàng hoá</h2>
        </th>
        <th>
            @Html.ActionLink("Thêm Mới", "Create")
        </th>
        <th>
            @Html.ActionLink("Quay Lại", "Index", "Homes")
        </th>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nhomhangs.Ten_NH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ten_HH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaMua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Noi_SX)
        </th>
