        <th>
            @Html.ActionLink("Quay Lại", "Index", "Homes")
        </th>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ten_NH)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
