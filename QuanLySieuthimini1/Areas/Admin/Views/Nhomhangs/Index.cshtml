@model IEnumerable<QuanLySieuthimini1.Models.Nhomhang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            <h2>Danh sách nhóm hàng</h2>
        </th>
        <th>
            @Html.ActionLink("Thêm Mới", "Create")
